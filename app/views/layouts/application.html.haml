= render "layouts/main"
- flash.each do |name, msg|
  = content_tag :div, msg, class: "alert alert-#{name} text-center"

#page-content-wrapper
  .container-fluid
    .row
      / .col-sm-3.col-md-2
      /   = render "layouts/sidemenu"
      .col-sm-10.col-md-12
        = yield
      / .col-sm-3.col-md-2
      /   = render "layouts/rightmenu"
  / /#page-content-wrapper
/ /#wrapper
/ jQuery

%script#dsq-count-scr{:async => "", :src => "//thecockers.disqus.com/count.js"}
/ Menu Toggle Script
:javascript
  $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
  });

:javascript
    window.fbAsyncInit = function() {

      FB.init({

      appId      : '1005472019475112',

      xfbml      : true,

      version    : 'v2.5'

      });

    };

    (function(d, s, id){

      var js, fjs = d.getElementsByTagName(s)[0];

      if (d.getElementById(id)) {return;}

      js = d.createElement(s); js.id = id;

      js.src = "//connect.facebook.net/en_US/sdk.js";

      fjs.parentNode.insertBefore(js, fjs);

    }(document, 'script', 'facebook-jssdk'));